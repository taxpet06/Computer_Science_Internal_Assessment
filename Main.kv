<AddDrill>:
#Uses the GridLayout structure as indicated in the cs_ia_2023_2025.py file
#GUI for the Add Drill Screen
    rows : 10
    spacing : 10,10
    padding : 10,10
    #Used for UI organization
    GridLayout:
        cols:2
        Label:
        #tags label
            text: 'Tags'
            font_size: 20
            color: '5D3B23'
        #Used for UI organization
        GridLayout:
            rows:3
            cols:2
            Label:
            #grammar label
                text: 'Grammar'
                font_size: 20
                color: '5D3B23'
            CheckBox:
            #checkbox for adding the grammar tage
                color : 'B27B3E'
                id: grammar
                on_press : root.addremove_tag("grammar", self.active)
            Label:
            #vocabulary label
                text: 'Vocabulary'
                font_size: 20
                color: '5D3B23'
            CheckBox:
            #checkbox for adding the vocabulary tage
                id: grammar
                color : 'B27B3E'
                on_press : root.addremove_tag("vocabulary", self.active)
            Label:
            #syntax label
                text: 'Syntax'
                font_size: 20
                color: '5D3B23'
            CheckBox:
            #checkbox for adding the syntax tag
                id: grammar
                color : 'B27B3E'
                on_press : root.addremove_tag("syntax", self.active)
    #Used for UI organization
    GridLayout:
        cols:2
        Label:
        #question type label
            text: 'Question Type'
            font_size: 20
            color: '5D3B23'
        #Used for UI organization
        GridLayout:
            rows:5
            cols:2
            Label:
            #multiple choice label
                text: 'Multiple Choice'
                font_size: 20
                color: '5D3B23'
            CheckBox:
            #checkbox to deem the exercise a multiple choice type
                group:"v"
                color : 'B27B3E'
                id: multiple_choice
                on_press : root.change_type("multiple_choice")
            Label:
            #true or false label
                text: 'True or False'
                font_size: 20
                color: '5D3B23'
            CheckBox:
            #checkbox to deem the exercise a true or false type
                group:"v"
                color : 'B27B3E'
                id: true_false
                on_press : root.change_type("true_false")
            Label:
            #free response label
                text: 'Free Response'
                font_size: 20
                color: '5D3B23'
            CheckBox:
            #checkbox to deem the exercise a free response type
                group:"v"
                color : 'B27B3E'
                id: free
                on_press : root.change_type("free")
            Label:
            #Connecting Words label
                text: 'Conncecting'
                font_size: 20
                color: '5D3B23'
            CheckBox:
            #checkbox to deem the exercise a connecting words type
                group:"v"
                color : 'B27B3E'
                id: connecting
                on_press : root.change_type("connecting")
            Label:
            #ordering words label
                text: 'Ordering'
                font_size: 20
                color: '5D3B23'
            CheckBox:
            #checkbox to deem the exercise an ordering words type
                group:"v"
                color : 'B27B3E'
                id: ordering
                on_press : root.change_type("ordering")
    TextInput:
        #text input widgets for the user to enter the question
        id: question_text
        hint_text : "Enter question here"
        hint_text_color: 1,1,1,1
        font_size : 20
        foreground_color : 1,1,1,1
        background_color : 'B27B3E'
        multiline : False
    #Used for UI organization
    GridLayout:
        rows: 2
        Label:
        #options label
            id: options
            text: 'Options '
            font_size: 20
            color: '5D3B23'
        Slider:
        #slider for user to pick the amount of options they want
            id: option_slider
            min: 1
            max: 10
            step: 1
            value: 1
            on_value: root.slider(self.value)
    #Used for UI organization
    GridLayout:
        rows:2
        #Used for UI organization
        GridLayout:
            cols:2
            Label:
            #all options label
                id: all_options_text
                text: 'All Options: '
                font_size: 20
                color:'5D3B23'
            Label:
            #label to display in real time all the available options that the user inputs
                id: all_options
                text: ''
                font_size: 20
                color: '5D3B23'
        #Used for UI organization
        GridLayout:
            cols:3
            TextInput:
            #text input widget for user to add an option
                id: one_option
                hint_text : "Enter 1 option"
                hint_text_color: 1,1,1,1
                font_size : 20
                foreground_color : 1,1,1,1
                background_color : 'B27B3E'
                multiline : False
            Button:
            #button to add the option
                text: "Add"
                font_size : 20
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''  
                on_press : root.add_to_alloptions()
            Button:
            #button to delete the latest option
                text: "Delete"
                font_size : 20
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''  
                on_press : root.delete_from_alloptions()
    #Used for UI organization
    GridLayout:
        rows:2
        #Used for UI organization
        GridLayout:
            cols:2
            Label:
            #all answers label
                id: all_answers_text
                text: 'Answers: '
                font_size: 20
                color: '5D3B23'
            Label:
            #label that displays all the dynamically inputted answer that the user inputs
                id: all_answers
                text: ''
                font_size: 20
                color: '5D3B23'
        #Used for UI organization
        GridLayout:
            cols:3
            TextInput:
            #text input for the user to input a possible answer
                id: one_answer
                hint_text : "Enter 1 answer"
                hint_text_color: 1,1,1,1
                font_size : 20
                foreground_color : 1,1,1,1
                background_color : 'B27B3E'
                multiline : False
            Button:
            #button to add that answer
                text: "Add"
                font_size : 20
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''  
                on_press : root.add_to_allanswers()
            Button:
            #button to delete latest answer
                text: "Delete"
                font_size : 20
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''  
                on_press : root.delete_from_allanswers()
    TextInput:
    #input widget for user to enter their explanation
        id: explanation_text
        hint_text : "Enter explanation here"
        hint_text_color: 1,1,1,1
        font_size : 20
        foreground_color : 1,1,1,1
        background_color : 'B27B3E'
        multiline : False
    Button:
    #button that adds the quiz to database
        text: "Add to \nQuestion Database"
        font_size : 20
        halign : 'center'
        border:2,2,2,2
        background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
        background_normal: ''
        #background_down: ''  
        on_press : root.add_to_db()
    Button:
    #button that brings user back to the home page
        text: "Home"
        font_size : 20
        halign : 'center'
        border:2,2,2,2
        background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
        background_normal: ''
        #background_down: ''  
        on_press : root.home()

