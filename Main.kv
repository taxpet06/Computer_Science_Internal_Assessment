#:kivy 2.1.0
#This file contains little to no logic. It is simply used to handle the GUI with the kivy library in a more clean and organized manner.
<Home>:
    #Uses the GridLayout structure as indicated in the cs_ia_2023_2025.py file
    #GUI for the Home Screen
    #Grid layouts are used throughout always for the purpose of better organizing the UI inside them
    cols : 1
    spacing : 10,10
    padding : 10,10
    #Used for UI organization
    GridLayout:
        spacing : 10,10
        padding : 10,10
        rows : 8
        Label:
        #Welcome label
            id:welcome
            text : "Welcome"
            font_size : 40
            color : '5D3B23'
        Label:
        #Quiz by Exercise Label
            id:exercice
            text : "Quizzes By Exercise"
            font_size : 40
            color : '5D3B23'
        #Used for UI organization
        GridLayout:
            spacing : 10,10
            padding : 10,10
            cols:5
            Button:
            #Multiple Choise Button
                id:multiple
                text : "Multiple\nChoice"
                halign : 'center'
                font_size : 18
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.begin("multiple_choice")
            Button:
            #Free Response button
                id:free
                text : "Free\nResponse"
                font_size : 18
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.begin("free")
            Button:
            #Connect Words Button
                id:connect
                text : "Connect\nWords"
                font_size : 18
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.begin("connecting")
            Button:
            #Order Words Button
                id:order
                text : "Order\nWords"
                font_size : 18
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.begin("ordering")
            Button:
            #True or False button
                id:true
                text : "True\n/\nFalse"
                font_size : 18
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.begin("true_false")
        Label:
        #Quiz by content label
            id:content
            text : "Quizzes By Content"
            font_size : 40
            color : '5D3B23'
        #Used for UI organization
        GridLayout:
            spacing : 10,10
            padding : 10,10
            cols:3
            Button:
            #Grammar Button
                id:grammar
                text : "Grammar"
                font_size : 20
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.begin("grammar")
            Button:
            #Vocabulary Button
                id:vocabulary
                text : "Vocabulary"
                font_size : 20
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.begin("vocabulary")
            Button:
            #Syntax Button
                id:syntax
                text : "Syntax"
                font_size : 20
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.begin("syntax")
        Label:
        #Random Quiz Label
            id:content
            text : "Random Quiz"
            font_size : 40
            color : '5D3B23'
        #Used for UI organization
        GridLayout:
            spacing : 10,10
            padding : 10,10
            cols:1
            Button:
            #Begin Random Quiz Button
                id:begin
                text : "Begin Random"
                font_size : 20
                halign : 'center'
                border:2,2,2,2
                background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.begin("random")
        Button:
        #Teacher Dashboard Button
            text:"Teacher Mode"
            font_size : 40
            halign : 'center'
            border:2,2,2,2
            background_color: 'B27B3E'#0.459, 0.722, 0.31, 1  
            background_normal: ''
            ##background_down: ''  
            on_press : root.login()
<TeacherLogin>:
#Uses the GridLayout structure as indicated in the cs_ia_2023_2025.py file
