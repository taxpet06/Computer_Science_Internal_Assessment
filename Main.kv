<DrillList>:
#Uses the GridLayout structure as indicated in the cs_ia_2023_2025.py file
#GUI for the Drill List Screen
    spacing : 10,10
    padding : 10,10
    rows: 3
    #Used for UI organization
    GridLayout:
        spacing : 10,10
        padding : 10,10
        rows:1
        cols:2
        Label:
        #all the drills label
            id:drills
