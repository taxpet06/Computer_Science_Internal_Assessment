#:kivy 2.1.0
<Home>:
    cols : 1
    spacing : 10,10
    padding : 10,10
    GridLayout:
        spacing : 10,10
        padding : 10,10
        rows : 8
        Label:
            id:welcome
            text : "Welcome"
            font_size : 40
            color : 1,1,1,1
        Label:
            id:exercice
            text : "Quizzes By Exercise"
            font_size : 40
            color : 1,1,1,1
        GridLayout:
            spacing : 10,10
            padding : 10,10
            cols:5
            Label:
                id:mc
                text : "MC"
                font_size : 20
                color : 1,1,1,1
            Label:
                id:fr
                text : "FR"
                font_size : 20
                color : 1,1,1,1
            Label:
                id:cw
                text : "CW"
                font_size : 20
                color : 1,1,1,1
            Label:
                id:ow
                text : "OW"
                font_size : 20
                color : 1,1,1,1
            Label:
                id:rw
                text : "RW"
                font_size : 20
                color : 1,1,1,1
        Label:
            id:content
            text : "Quizzes By Content"
            font_size : 40
            color : 1,1,1,1
        GridLayout:
            spacing : 10,10
            padding : 10,10
            cols:3
            Label:
                id:grammar
                text : "Grammar"
                font_size : 20
                color : 1,1,1,1
            Label:
                id:vocabulary
                text : "Vocabulary"
                font_size : 20
                color : 1,1,1,1
            Label:
                id:syntax
                text : "Syntax"
                font_size : 20
                color : 1,1,1,1
        Label:
            id:content
            text : "Random Quiz"
            font_size : 40
            color : 1,1,1,1
        GridLayout:
            spacing : 10,10
            padding : 10,10
            cols:1
            Button:
                id:begin
                text : "Begin"
                font_size : 40
                border: 2,2,2,2
                background_color: 0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''
                on_press : root.exercice()
        Button:
            text:"Teacher Mode"
            font_size : 40
            border: 2,2,2,2
            background_color: 0.459, 0.722, 0.31, 1  
            background_normal: ''
            ##background_down: ''  
            on_press : root.login()
<TeacherLogin>:
    spacing : 10,10
    padding : 10,10
    rows:4
    Label:
        id:please
        text: "Please Enter the\nTeacher Passcode\nand Hit Enter"
        font_size : 40
        color : 1,1,1,1
    Label:
        id:credential
        text: ""
        font_size : 40
        color : 1,1,1,1
    TextInput:
        id:input
        text: ""
        hint_text : "Enter passcode here"
        hint_text_color: 1,1,1,1
        password: True
        font_size : 20
        color : 1,1,1,1
        foreground_color : 1,1,1,1
        background_color : 0.482, 0.82, 0.38, 1
        multiline : False
        on_text_validate : root.dashboard()
    Button:
        text:"Home"
        font_size : 40
        border: 2,2,2,2
        background_color: 0.459, 0.722, 0.31, 1  
        background_normal: ''
        #background_down: ''  
        on_press : root.home()
<DrillList>:
    spacing : 10,10
    padding : 10,10
    rows: 3
    GridLayout:
        spacing : 10,10
        padding : 10,10
        rows:1
        cols:2
        Label:
            id:drills
            text: "Here are all the Drills"
            font_size : 20
            color : 1,1,1,1
        Button:
            text:"Add Drill"
            font_size : 20
            border: 2,2,2,2
            background_color: 0.459, 0.722, 0.31, 1  
            background_normal: ''
            #background_down: ''  
            on_press : root.add()
    BoxLayout:
        oritentation: "vertical"
        Carousel:
            id: carousel
            direction:"bottom"
            GridLayout:
                id : delete_me
                rows : 2
                Label:
                    text: 'Press Below to\nShow Scrollable Drills'
                    font_size: 20
                    color: 1,1,1,1
                CheckBox:
                    group : 'v'
                    id: g
                    on_active : root.build("delete_me")

    Button:
        text:"Home"
        font_size : 20
        border: 2,2,2,2
        background_color: 0.459, 0.722, 0.31, 1  
        background_normal: ''
        #background_down: ''  
        on_press : root.home()
<TeacherDashboard>:
    spacing : 10,10
    padding : 10,10
    rows:4
    Label:
        id:dashboard
        text: "Welcome to the\nTeacher Dashboard"
        font_size : 40
        color : 1,1,1,1
    Button:
        text:"Add Drill"
        font_size : 40
        border: 2,2,2,2
        background_color: 0.459, 0.722, 0.31, 1  
        background_normal: ''
        #background_down: ''  
        on_press : root.add()
    Button:
        text:"Drill List"
        font_size : 40
        border: 2,2,2,2
        background_color: 0.459, 0.722, 0.31, 1  
        background_normal: ''
        #background_down: ''  
        on_press : root.drills()
    Button:
        text:"Home"
        font_size : 40
        border: 2,2,2,2
        background_color: 0.459, 0.722, 0.31, 1  
        background_normal: ''
        #background_down: ''  
        on_press : root.home()

<Results>:
    rows : 4
    spacing : 10,10
    padding : 10,10
    Label:
        text: 'Press Below to Reveal Score'
        font_size: 20
        color: 1,1,1,1
    CheckBox:
        group : 'v'
        on_active : root.change_stats()
    Label:
        text: ''
        font_size: 20
        color: 1,1,1,1

<Exercice>:
    rows : 4
    spacing : 10,10
    padding : 10,10
    Label:
        text: 'Press Below to Start'
        font_size: 20
        color: 1,1,1,1
    CheckBox:
        group : 'v'
        on_active : root.build()
    Label:
        text: ''
        font_size: 20
        color: 1,1,1,1

<AddDrill>:
    rows : 10
    spacing : 10,10
    padding : 10,10
    GridLayout:
        cols:2
        Label:
            text: 'Tags'
            font_size: 20
            color: 1,1,1,1
        GridLayout:
            rows:3
            cols:2
            Label:
                text: 'Grammar'
                font_size: 20
                color: 1,1,1,1
            CheckBox:
                id: grammar
                on_press : root.addremove_tag("grammar", self.active)
            Label:
                text: 'Vocabulary'
                font_size: 20
                color: 1,1,1,1
            CheckBox:
                id: grammar
                on_press : root.addremove_tag("vocabulary", self.active)
            Label:
                text: 'Syntax'
                font_size: 20
                color: 1,1,1,1
            CheckBox:
                id: grammar
                on_press : root.addremove_tag("syntax", self.active)
    GridLayout:
        cols:2
        Label:
            text: 'Question Type'
            font_size: 20
            color: 1,1,1,1
        GridLayout:
            rows:5
            cols:2
            Label:
                text: 'Multiple Choice'
                font_size: 20
                color: 1,1,1,1
            CheckBox:
                group: "v"
                id: multiple_choice
                on_press : root.change_type("multiple_choice")
            Label:
                text: 'True or False'
                font_size: 20
                color: 1,1,1,1
            CheckBox:
                group: "v"
                id: true_false
                on_press : root.change_type("true_false")
            Label:
                text: 'Free Response'
                font_size: 20
                color: 1,1,1,1
            CheckBox:
                group: "v"
                id: free
                on_press : root.change_type("free")
            Label:
                text: 'Conncecting'
                font_size: 20
                color: 1,1,1,1
            CheckBox:
                group: "v"
                id: connecting
                on_press : root.change_type("connecting")
            Label:
                text: 'Ordering'
                font_size: 20
                color: 1,1,1,1
            CheckBox:
                group: "v"
                id: ordering
                on_press : root.change_type("ordering")
    TextInput:
        id: question_text
        hint_text : "Enter question here"
        hint_text_color: 1,1,1,1
        font_size : 20
        color : 1,1,1,1
        foreground_color : 1,1,1,1
        background_color : 0.482, 0.82, 0.38, 1
        multiline : False
    GridLayout:
        rows: 2
        Label:
            id: options
            text: 'Options '
            font_size: 20
            color: 1,1,1,1
        Slider:
            id: option_slider
            min: 1
            max: 10
            step: 1
            value: 1
            on_value: root.slider(self.value)
    GridLayout:
        rows:2
        GridLayout:
            cols:2
            Label:
                id: all_options_text
                text: 'All Options: '
                font_size: 20
                color: 1,1,1,1
            Label:
                id: all_options
                text: ''
                font_size: 20
                color: 1,1,1,1
        GridLayout:
            cols:3
            TextInput:
                id: one_option
                hint_text : "Enter 1 option"
                hint_text_color: 1,1,1,1
                font_size : 20
                color : 1,1,1,1
                foreground_color : 1,1,1,1
                background_color : 0.482, 0.82, 0.38, 1
                multiline : False
            Button:
                text: "Add"
                font_size : 20
                border: 2,2,2,2
                background_color: 0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''  
                on_press : root.add_to_alloptions()
            Button:
                text: "Delete"
                font_size : 20
                border: 2,2,2,2
                background_color: 0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''  
                on_press : root.delete_from_alloptions()
    GridLayout:
        rows:2
        GridLayout:
            cols:2
            Label:
                id: all_answers_text
                text: 'Answers: '
                font_size: 20
                color: 1,1,1,1
            Label:
                id: all_answers
                text: ''
                font_size: 20
                color: 1,1,1,1
        GridLayout:
            cols:3
            TextInput:
                id: one_answer
                hint_text : "Enter 1 answer"
                hint_text_color: 1,1,1,1
                font_size : 20
                color : 1,1,1,1
                foreground_color : 1,1,1,1
                background_color : 0.482, 0.82, 0.38, 1
                multiline : False
            Button:
                text: "Add"
                font_size : 20
                border: 2,2,2,2
                background_color: 0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''  
                on_press : root.add_to_allanswers()
            Button:
                text: "Delete"
                font_size : 20
                border: 2,2,2,2
                background_color: 0.459, 0.722, 0.31, 1  
                background_normal: ''
                #background_down: ''  
                on_press : root.delete_from_allanswers()
    TextInput:
        id: explanation_text
        hint_text : "Enter explanation here"
        hint_text_color: 1,1,1,1
        font_size : 20
        color : 1,1,1,1
        foreground_color : 1,1,1,1
        background_color : 0.482, 0.82, 0.38, 1
        multiline : False
    Button:
        text: "Add to \nQuestion Database"
        font_size : 20
        border: 2,2,2,2
        background_color: 0.459, 0.722, 0.31, 1  
        background_normal: ''
        #background_down: ''  
        on_press : root.add_to_db()
    Button:
        text: "Home"
        font_size : 20
        border: 2,2,2,2
        background_color: 0.459, 0.722, 0.31, 1  
        background_normal: ''
        #background_down: ''  
        on_press : root.home()

